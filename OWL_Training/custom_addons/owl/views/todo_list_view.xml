<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="todo_list_list_view" model="ir.ui.view">
        <field name="name">owl.todo.list.list</field>
        <field name="model">owl.todo.list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="completed"/>
                <field name="color" widget="color"/>
            </list>
        </field>
    </record>

    <record id="todo_list_form_view" model="ir.ui.view">
        <field name="name">owl.todo.list.form</field>
        <field name="model">owl.todo.list</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color"/>
                        <field name="completed"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="todo_list_action" model="ir.actions.act_window">
        <field name="name">Todo List</field>
        <field name="res_model">owl.todo.list</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="todo_list_action_js" model="ir.actions.client">
        <field name="name"> Todo List OWL</field>
        <field name="tag">owl.action_todo_list_js</field>
    </record>

    <menuitem id="menu_owl_tutorial" name="OWL Tutorial">
        <menuitem id="menu_owl_todo_list" name="Todo List" action="todo_list_action"/>
        <menuitem id="menu_owl_todo_list_js" name="Todo List OWL" action="todo_list_action_js"/>
    </menuitem>
</odoo>